<div class="form-container">
  <div class="login-card">
    <h1 class="login-title text-center">Sign up</h1>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group text-start">
        <%= f.label :full_name %>
        <em>(50 chars min)</em> <br>
        <%= f.text_field :full_name,
              class: "form-control",
              autofocus: true,
              maxlength: 50 %>
      </div>

      <div class="form-group text-start">
        <%= f.label :email %><br>
        <%= f.email_field :email,
              class: "form-control",
              autocomplete: "email",
              maxlength: 255 %>
      </div>

      <div class="form-group text-start">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> - 25 chars max)</em>
        <% end %><br>
        <%= f.password_field :password,
              class: "form-control",
              autocomplete: "new-password",
              minlength: 6,
              maxlength: 25 %>
      </div>

      <div class="form-group text-start">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation,
              class: "form-control",
              autocomplete: "new-password",
              minlength: 6,
              maxlength: 25 %>
      </div>

      <div class="form-actions mt-4 d-flex justify-content-end">
        <%= f.submit "Sign up",
              class: "btn btn-nu" %>
      </div>
    <% end %>
    <br>
    <div class="form-actions mt-2 text-start">
      <%= link_to "Log in", new_user_session_path, class: "me-3" %>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
