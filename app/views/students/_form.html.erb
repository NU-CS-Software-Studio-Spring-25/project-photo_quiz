<%= form_with(model: @student, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :course %>
      <%= form.text_field :course, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :profile_picture %>
      <%= form.file_field :profile_picture, class: "form-control" %>
    </div>
  
    <div class="form-group mt-3">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', students_path, class: "btn btn-secondary" %>
    </div>
<% end %>